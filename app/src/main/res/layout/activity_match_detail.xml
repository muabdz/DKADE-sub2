<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefresh"
        tools:context=".matchdetail.MatchDetailActivity">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar1"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintHorizontal_bias="0.41"
                    app:layout_constraintTop_toTopOf="@+id/tvTanggal"
                    android:layout_marginTop="8dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tvTanggal" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>


            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ivTeam1"
                    app:layout_constraintTop_toTopOf="@+id/guideline"
                    app:layout_constraintBottom_toTopOf="@+id/guideline"
                    app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTeam1"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline2"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/ivTeam1"
                    android:textSize="14sp" android:textAlignment="center"
                    android:maxLines="2" android:singleLine="false" app:layout_constraintBottom_toTopOf="@+id/view1"
                    android:layout_marginBottom="8dp"/>
            <TextView
                    android:text="@string/vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline"
                    app:layout_constraintBottom_toTopOf="@+id/guideline"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"/>
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ivTeam2"
                    app:layout_constraintTop_toTopOf="@+id/guideline"
                    app:layout_constraintBottom_toTopOf="@+id/guideline"
                    app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline" app:layout_constraintGuide_begin="78dp"
                                                  android:orientation="horizontal"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline2"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_percent="0.2"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline3"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_percent="0.5"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline4"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_percent="0.8"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTeam2" app:layout_constraintStart_toStartOf="@+id/guideline4"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/ivTeam2" android:textSize="14sp"
                    android:textAlignment="center"
                    android:maxLines="2" android:singleLine="false" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/view1"/>

            <View style="@style/Divider" android:id="@+id/view1"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintHorizontal_bias="0.0"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="164dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvScore1" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintStart_toEndOf="@+id/ivTeam1"
                    app:layout_constraintBottom_toTopOf="@+id/guideline" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/textView4" android:layout_marginEnd="8dp"
                    android:textSize="24sp" android:textAlignment="center"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvScore2"
                    app:layout_constraintBottom_toTopOf="@+id/guideline"
                    app:layout_constraintTop_toTopOf="@+id/guideline"
                    app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/ivTeam2" android:layout_marginEnd="8dp"
                    android:textSize="24sp" android:textAlignment="center"/>
            <TextView
                    android:text="@string/goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="@+id/guideline5"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:textSize="12sp"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline5" app:layout_constraintGuide_begin="175dp"
                                                  android:orientation="horizontal"/>
            <TextView
                    android:text="@string/shots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@+id/barrierGoals" android:layout_marginTop="8dp"/>
            <View style="@style/Divider"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" android:id="@+id/view2"
                  app:layout_constraintTop_toTopOf="@+id/barrierShots" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/lineups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10" android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="@string/goalkeeper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11" android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toBottomOf="@+id/textView10" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/defense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/barrierGoalkeeper"/>
            <TextView
                    android:text="@string/midfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/barrierDefense" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/barrierMidfield"/>
            <TextView
                    android:text="@string/subtitutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15" android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/barrierForward"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvGoal1" android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toTopOf="@+id/guideline5"
                    android:textAlignment="viewStart" android:maxLines="10" android:singleLine="false"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvGoal2"
                    app:layout_constraintTop_toTopOf="@+id/guideline5"
                    app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"
                    android:textSize="14sp"
                    android:textAlignment="viewEnd" android:maxLines="10" android:singleLine="false"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvShot1" android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/barrierGoals"
                    android:textAlignment="viewStart" android:maxLines="10" android:singleLine="false"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvShot2" app:layout_constraintStart_toStartOf="@+id/guideline4"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    android:layout_marginEnd="8dp" android:textSize="14sp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/barrierGoals"
                    android:textAlignment="viewEnd" android:maxLines="10" android:singleLine="false"/>
            <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/barrierGoals" app:barrierDirection="bottom"
                                                app:constraint_referenced_ids="tvGoal2,tvGoal1"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
            />
            <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/barrierShots" app:barrierDirection="bottom"
                                                app:constraint_referenced_ids="tvShot1,tvShot2"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvGoalkeeper1" app:layout_constraintStart_toStartOf="@+id/guideline2"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    android:layout_marginEnd="8dp" android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@+id/textView11" android:textAlignment="viewStart"
                    android:maxLines="10" android:singleLine="false"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvGoalkeeper2" android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline4"
                    app:layout_constraintTop_toTopOf="@+id/textView11" android:textAlignment="viewEnd"
                    android:maxLines="10" android:singleLine="false"/>
            <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/barrierGoalkeeper" app:barrierDirection="bottom"
                                                app:constraint_referenced_ids="tvGoalkeeper1,textView11,tvGoalkeeper2"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDefense1" android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/textView12" android:textAlignment="viewStart"
                    android:maxLines="10" android:singleLine="false"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDefense2" app:layout_constraintStart_toStartOf="@+id/guideline4"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    android:layout_marginEnd="8dp" android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@+id/textView12" android:textAlignment="viewEnd"
                    android:maxLines="10" android:singleLine="false"/>
            <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/barrierDefense" app:barrierDirection="bottom"
                                                app:constraint_referenced_ids="tvDefense1,textView12,tvDefense2"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMidfield1" android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/barrierDefense" android:textAlignment="viewStart"
                    android:maxLines="10" android:singleLine="false"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMidfield2" android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/barrierDefense"
                    android:textAlignment="viewEnd" android:maxLines="10" android:singleLine="false"/>
            <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/barrierMidfield" app:barrierDirection="bottom"
                                                app:constraint_referenced_ids="tvMidfield1,tvMidfield2"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvForward1" android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/barrierMidfield" android:textAlignment="viewStart"
                    android:maxLines="10" android:singleLine="false"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvForward2" app:layout_constraintStart_toStartOf="@+id/guideline4"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@+id/barrierMidfield" android:textSize="14sp"
                    android:textAlignment="viewEnd" android:maxLines="10" android:singleLine="false"/>
            <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/barrierForward" app:barrierDirection="bottom"
                                                app:constraint_referenced_ids="tvForward2,tvForward1"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSubtitutes1" android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toTopOf="@+id/textView15" android:textAlignment="viewStart"
                    android:maxLines="10" android:singleLine="false"/>
            <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSubtitutes2" android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/textView15" android:textAlignment="viewEnd"
                    android:maxLines="10" android:singleLine="false"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>